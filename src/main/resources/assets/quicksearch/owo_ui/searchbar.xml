<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="scrollArea">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <box id="coloredBox">
                                    <color>#191414</color>
                                    <fill>true</fill>
                                    <sizing>
                                        <horizontal method="fixed">5</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </box>
                                <text-box id="searchBox">
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="content">1</vertical>
                                    </sizing>
                                    <margins>
                                        <left>4</left>
                                        <top>2</top>
                                    </margins>
                                    <cursor-style>text</cursor-style>
                                    <show-background>false</show-background>
                                </text-box>
                            </children>
                            <sizing>
                                <horizontal method="fixed">200</horizontal>
                            </sizing>
                            <surface>
                                <flat>#1D1D1D</flat>
                            </surface>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>
                        <collapsible expanded="true" id="mathContainer">
                            <children>
                                <flow-layout direction="horizontal" id="mathBox">
                                    <children>
                                        <label id="mathResult">
                                            <text>(null)</text>
                                            <cursor-style>pointer</cursor-style>
                                            <color>#AAAAAA</color>
                                            <margins>
                                                <all>5</all>
                                                <right>-2</right>
                                            </margins>
                                        </label>
                                    </children>
                                    <sizing>
                                        <horizontal method="fixed">195</horizontal>
                                    </sizing>
                                    <allow-overflow>false</allow-overflow>
                                    <horizontal-alignment>left</horizontal-alignment>
                                    <vertical-alignment>top</vertical-alignment>
                                    <surface>
                                        <vanilla-translucent/>
                                        <blur quality="10" size="2"/>
                                    </surface>
                                </flow-layout>
                            </children>
                            <allow-overflow>true</allow-overflow>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>
                            <sizing>
                                <horizontal method="fixed">0</horizontal>
                                <vertical method="fixed">0</vertical>
                            </sizing>
                            <margins>
                                <left>-10</left>
                            </margins>
                        </collapsible>
                        <collapsible expanded="true" id="resultsContainer">
                            <children>
                                <scroll direction="vertical" id="resultsArea">
                                    <flow-layout direction="vertical" id="resultsBox">
                                        <children>

                                        </children>
                                        <vertical-alignment>top</vertical-alignment>
                                        <horizontal-alignment>left</horizontal-alignment>
                                        <allow-overflow>true</allow-overflow>
                                    </flow-layout>
                                    <allow-overflow>true</allow-overflow>
                                    <vertical-alignment>top</vertical-alignment>
                                    <horizontal-alignment>left</horizontal-alignment>
                                    <sizing>
                                        <vertical method="fixed">100</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <allow-overflow>true</allow-overflow>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>
                            <sizing>
                                <horizontal method="fixed">0</horizontal>
                                <vertical method="fixed">0</vertical>
                            </sizing>
                        </collapsible>
                    </children>
                    <allow-overflow>true</allow-overflow>
                    <sizing>
                    </sizing>
                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>
            <allow-overflow>true</allow-overflow>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <padding>
                <all>10</all>
            </padding>
            <sizing>
                <horizontal method="fill">100</horizontal>
            </sizing>
            <surface>
                <blur quality="3" size="2"/>
                <blur quality="2" size="10"/>
                <blur quality="3" size="2"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>